<div class="logoCorner marginal">
  <img src="/evie.png" class="logo">
</div>
<div class="addHeight">
  <div class="marBot right">
    <a href="/logout"  id="logout" class ="btn btn-color">Log Out</a>
  </div>
</div>
<br>
<center>
  <div class='bont marginal'>
    Groups
  </div>
  <div>
    {{#each groups}}
    <div class='groupBack lefty marginalSmall certainWidth'>
      <a href="/groups/{{_id}}">
        <div>
          <p class='break'><b>Name:</b> {{name}}</p>
        </div>
        <div>
          <p class='break'><b>Description:</b> {{description}}</p>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</center>

<div id="centerFlex" class="marginal middleman marTop">
  <button id="newGrp" class="btn btn-color marginalSmall" data-toggle="collapse" data-target="#addGrp">Create Group</button>
  <div id="addGrp" class="collapse">
    <form method="POST"">
      <div class="form-group">
        <input type="text" id="newGroup" name="name" class="form-control" placeholder="Group Name">
      </div>
      <div class="form-group">
        <textarea name="description" placeholder="Group Description" rows="3" cols="19"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" id="createGroupButton" class="btn btn-color">Add</button>
      </div>
    </form>
  </div>
</div>
<script>
  $( "#newGrp" ).click(function() {
    $('#newGroup').focus();
  });
</script>